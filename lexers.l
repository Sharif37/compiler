%{
#include "calc.tab.h"  // Generated by Bison
#include <stdlib.h>

%}

%option noyywrap

DIGIT    [0-9]
NUMBER   {DIGIT}+

%%

{NUMBER}    { yylval = atoi(yytext); return NUMBER; }
"+"         { return PLUS; }
"-"         { return MINUS; }
"*"         { return TIMES; }
"/"         { return DIVIDE; }
"("         { return LPAREN; }
")"         { return RPAREN; }
[ \t\n]     ;  /* Ignore whitespace */
.           { printf("Unexpected character: %s\n", yytext); }

%%

